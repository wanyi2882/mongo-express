{{#extends 'base'}}

{{#block 'content'}}
<h1>All Food Records</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        {{#each records}}
        <tr>
            <td>{{this.foodRecordName}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
            <td>
                <a class="btn btn-primary" href="/food_record/{{this._id}}//notes/add">Add Note</a>
                <a class="btn btn-primary" href="/food_record/{{this._id}}/edit">Edit</a>
                <a class="btn btn-danger" href="/food_record/{{this._id}}/delete">Delete</a>
            </td>

        </tr>
        {{/each}}

    </tbody>

</table>

{{/block}}

{{/extends}}