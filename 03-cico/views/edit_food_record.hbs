{{#extends 'base'}}

{{#block "content"}}
<h1>Edit food record</h1>
<form method="POST">
    <div>
        <label class="form-label">Food Name:</label>
        <input type="text" class="form-control" name="foodRecordName" value="{{foodRecord.foodRecordName}}"/>
    </div>
    <div>
        <label class="form-label">Calories</label>
        <input type="text" class="form-control" name="calories" value="{{foodRecord.calories}}"/>
    </div>
    <div>
        <label class="form-label">Tags</label>
        <div class="form-check form-check-inline form-control">
            <div>
                <input name="tags" class="form-check-input" type="checkbox" value="snack" 
                {{#inArray foodRecord.tags "snack"}}
                checked
                {{/inArray}}
                />
                <label>Snack</label>
            </div>
            <div>
                <input name="tags" class="form-check-input" type="checkbox" value="homecooked"
                {{#inArray foodRecord.tags "homecooked"}}
                checked
                {{/inArray}}
                />
                <label>Homecooked</label>
            </div>
            <div>
                <input name="tags" class="form-check-input" type="checkbox" value="unhealthy"
                {{#inArray foodRecord.tags "unhealthy"}}
                checked
                {{/inArray}}
                
                />
                <label>Unhealthy</label>
            </div>
        </div>

    </div>

    <input type="submit" class="btn btn-primary">

</form>
{{/block}}

{{/extends}}